:root {
  // Catppuccin Mocha Palette
  --ctp-rosewater: #f5e0dc;
  --ctp-flamingo: #f2cdcd;
  --ctp-pink: #f5c2e7;
  --ctp-mauve: #cba6f7;
  --ctp-red: #f38ba8;
  --ctp-maroon: #eba0ac;
  --ctp-peach: #fab387;
  --ctp-yellow: #f9e2af;
  --ctp-green: #a6e3a1;
  --ctp-teal: #93e1d4;
  --ctp-sky: #89dceb;
  --ctp-sapphire: #74c7ec;
  --ctp-blue: #89b4fa;
  --ctp-lavender: #b4befe;
  --ctp-text: #cdd6f4;
  --ctp-subtext1: #bac2de;
  --ctp-subtext0: #a6adc8;
  --ctp-overlay2: #9399b2;
  --ctp-overlay1: #7f849c;
  --ctp-overlay0: #6c7086;
  --ctp-surface2: #585b70;
  --ctp-surface1: #45475a;
  --ctp-surface0: #313244;
  --ctp-base: #1e1e2e;
  --ctp-mantle: #181825;
  --ctp-crust: #11111b;

  --app-background: var(--ctp-base); 
  --app-surface: var(--ctp-mantle);
  --app-border: var(--ctp-surface0);
  --app-text: var(--ctp-text);

  // RGB versions for transparency
  --ctp-base-rgb: 30, 30, 46;
  --ctp-mantle-rgb: 24, 24, 37;
  --ctp-crust-rgb: 17, 17, 27;
  --ctp-surface0-rgb: 49, 50, 68;
  --ctp-sky-rgb: 137, 220, 235;
  --ctp-green-rgb: 166, 227, 161;
}

html, body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background-color: var(--app-background) !important;
    color: var(--app-text) !important;
    font-family: 'Inter', 'Roboto', sans-serif;
}

.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background-color: var(--app-background);
}

.content {
    flex: 1;
}

.mat-mdc-menu-panel {
    background-color: var(--ctp-mantle) !important;
    border: 1px solid var(--ctp-surface1) !important;
    border-radius: 16px !important;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4) !important;
    padding: 8px !important;
    min-width: 180px !important;
}

.mat-mdc-menu-item {
    color: var(--ctp-text) !important;
    border-radius: 8px !important;
    margin-bottom: 4px !important;
    padding: 0 16px !important;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1) !important;

    &:last-child { margin-bottom: 0 !important; }

    &:hover {
        background-color: var(--ctp-surface0) !important;
        transform: translateX(4px);
    }

    mat-icon {
        margin-right: 12px !important;
        font-size: 20px !important;
        width: 20px !important;
        height: 20px !important;
        color: inherit !important;
    }

    &.profile-item {
        color: var(--ctp-teal) !important;
        &:hover {
            background-color: rgba(148, 226, 213, 0.1) !important;
        }
    }

    &.logout-item {
        color: var(--ctp-red) !important;
        &:hover {
            background-color: rgba(243, 139, 168, 0.1) !important;
        }
    }
}

// Premium Toasts (Frosted Glass Design)
.mat-mdc-snack-bar-container {
    .mdc-snackbar__surface {
        background-color: rgba(var(--ctp-surface0-rgb), 0.95) !important; 
        backdrop-filter: blur(12px) saturate(180%) !important;
        -webkit-backdrop-filter: blur(12px) saturate(180%) !important;
        border: 1px solid rgba(255, 255, 255, 0.2) !important; 
        border-radius: 12px !important;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.6) !important; 
        padding: 4px 12px !important;
        min-width: 320px !important; 
        max-width: 450px !important;
        max-height: 84px !important; // Total vertical limit
        overflow: hidden !important; // Ensure nothing leaks
    }

    &.toast-success .mdc-snackbar__surface {
        border-left: 8px solid var(--ctp-green) !important;
        box-shadow: 0 0 20px rgba(166, 227, 161, 0.2) !important;
        .mdc-snackbar__label { color: var(--ctp-green) !important; }
    }
    &.toast-error .mdc-snackbar__surface {
        border-left: 8px solid var(--ctp-red) !important;
        box-shadow: 0 0 20px rgba(243, 139, 168, 0.2) !important;
        .mdc-snackbar__label { color: var(--ctp-red) !important; }
    }
    &.toast-info .mdc-snackbar__surface {
        border-left: 8px solid var(--ctp-sky) !important;
        box-shadow: 0 0 20px rgba(137, 220, 235, 0.2) !important;
        .mdc-snackbar__label { color: var(--ctp-sky) !important; }
    }
    &.toast-warning .mdc-snackbar__surface {
        border-left: 8px solid var(--ctp-yellow) !important;
        box-shadow: 0 0 20px rgba(249, 226, 175, 0.2) !important;
        .mdc-snackbar__label { color: var(--ctp-yellow) !important; }
    }

    .mdc-snackbar__label {
        font-family: 'Outfit', 'Inter', sans-serif !important;
        font-size: 1.05rem !important; 
        font-weight: 600 !important; 
        padding: 12px 8px !important; // Reduced padding

        display: -webkit-box !important;
        -webkit-line-clamp: 2 !important;
        line-clamp: 2 !important;
        -webkit-box-orient: vertical !important;
        overflow: hidden !important;
        text-overflow: ellipsis !important;
        word-break: break-all !important;
        max-height: 3.2em !important; // Limit text area height
    }

    .mat-mdc-snack-bar-action {
        color: var(--ctp-text) !important;
        font-weight: 800 !important;
        margin-left: 12px !important;
    }
}
